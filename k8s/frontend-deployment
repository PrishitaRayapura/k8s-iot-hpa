apiVersion: apps/v1
kind: Deployment
metadata:
  name: k8s-iot-hpa-frontend
spec:
  replicas: 1
  selector:
    matchLabels:
      app: k8s-iot-hpa-frontend
  template:
    metadata:
      labels:
        app: k8s-iot-hpa-frontend
    spec:
      containers:
      - name: frontend
        image: k8s-iot-hpa-frontend:latest
        ports:
        - containerPort: 5173
---
apiVersion: v1
kind: Service
metadata:
  name: frontend-service
spec:
  selector:
    app: k8s-iot-hpa-frontend
  ports:
  - protocol: TCP
    port: 80
    targetPort: 5173
  type: LoadBalancer
