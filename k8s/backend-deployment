apiVersion: apps/v1
kind: Deployment
metadata:
  name: k8s-iot-hpa-backend
spec:
  replicas: 1
  selector:
    matchLabels:
      app: k8s-iot-hpa-backend
  template:
    metadata:
      labels:
        app: k8s-iot-hpa-backend
    spec:
      containers:
      - name: backend
        image: k8s-iot-hpa-backend:latest
        ports:
        - containerPort: 5000
        env:
        - name: PORT
          value: "5000"
---
apiVersion: v1
kind: Service
metadata:
  name: backend-service
spec:
  selector:
    app: k8s-iot-hpa-backend
  ports:
  - protocol: TCP
    port: 80
    targetPort: 5000
  type: ClusterIP
